@model DigitalDevices.Models.CharacteristicsType

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактировать</h1>

<h4>@Model.Name</h4>
<hr />
<div>
    <a class="btn btn-primary" asp-action="Index">Назад к списку</a>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataType" class="control-label"></label>
                <select id="typeSelect" asp-for="DataType" class="form-control">
                    <option label="Перечисление">enum</option>
                    <option label="Логический тип (да, нет)">bool</option>
                    <option label="Строка">string</option>
                    <option label="Целое число">int</option>
                    <option label="Число с 'плавающей' точкой">float</option>
                    <option label="Число с 'плавающей' точкой, но с большей точностью">double</option>
                    <option label="Число для финансовых расчётов">decimal</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
                window.onload = function()
        {
        $('#typeSelect').val(@Model.DataType.ToString());
</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
