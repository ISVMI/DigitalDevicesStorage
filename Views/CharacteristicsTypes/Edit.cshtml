@model DigitalDevices.Models.CharacteristicsType

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактировать</h1>

<h4>@Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataType" class="control-label"></label>
                <select id="typeSelect" asp-for="DataType" class="form-control">
                    <option>enum</option>
                    <option>string</option>
                    <option>bool</option>
                    <option>int</option>
                    <option>float</option>
                    <option>decimal</option>
                    <option>double</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    <script>
                window.onload = function()
        {
        $('#typeSelect').val(@Model.DataType.ToString());
</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
