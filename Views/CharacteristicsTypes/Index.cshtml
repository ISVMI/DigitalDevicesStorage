@model IEnumerable<DigitalDevices.Models.CharacteristicsType>

@{
    ViewData["Title"] = "Список типов Характеристик";
}

<h1>Список типов характеристик:</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table-bordered" style="text-align:center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataType)
            </th>
            <th style="min-width:28%">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @{
                        string caption = "";
                        switch (item.DataType)
                        {
                            case "enum":
                                {
                                    caption = "Перечисление";
                                    break;
                                }
                            case "bool":
                                {
                                    caption = "Логический тип (да, нет)";
                                    break;
                                }
                            case "string":
                                {
                                    caption = "Строка";
                                    break;
                                }
                            case "int":
                                {
                                    caption = "Целое число";
                                    break;
                                }
                            case "float":
                                {
                                    caption = "Число с 'плавающей' точкой";
                                    break;
                                }
                            case "double":
                                {
                                    caption = "Число с 'плавающей' точкой, но с большей точностью";
                                    break;
                                }
                            case "decimal":
                                {
                                    caption = "Число для финансовых расчётов";
                                    break;
                                }
                        }
                    }
                    @caption
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
