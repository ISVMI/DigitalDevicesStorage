@using DigitalDevices.Models
@model DataViewModel
<h1>Техника, хранимая на складе</h1>
<div>
    <p>
        Список техники:
    </p>
        @{
            <h3><button class="accordion-button" id ="ComputersBtn">Компьютеры</button></h3>
            <table id="Computers" class="table" hidden>
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].OS)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].CPModel)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].CPFrequency)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].CPcores)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].RAMType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].RAMGB)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].GPU)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].GPUGB)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].StorageDriveType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].StorageGB)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].Model)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].Color)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].Warranty)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ComputersData[0].Manufacturer)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ComputersData)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OS)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CPModel)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CPFrequency)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CPcores)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RAMType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RAMGB)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GPU)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GPUGB)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StorageDriveType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StorageGB)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Model)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Color)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Warranty)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Manufacturer.Name)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    <a href="/Manufacturers/">Производители</a>
</div>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
                const btn = document.getElementById('ComputersBtn');
                const table = document.getElementById('Computers');

                btn.addEventListener('click', function() {

                    table.hidden = !table.hidden;
                });
            });
</script>
}
@{
}
