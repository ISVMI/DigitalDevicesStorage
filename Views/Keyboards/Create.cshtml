@model DigitalDevices.Models.Keyboard
@using DigitalDevices.Enums;
@{
    ViewData["Title"] = "Create";
}

<h1>Добавить</h1>

<h4>Клавиатуру</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<KeyboardType>()" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Switches" class="control-label"></label>
                <input asp-for="Switches" class="form-control" />
                <span asp-validation-for="Switches" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Keycaps" class="control-label"></label>
                <input asp-for="Keycaps" class="form-control" />
                <span asp-validation-for="Keycaps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LifeCycle" class="control-label"></label>
                <input asp-for="LifeCycle" class="form-control" />
                <span asp-validation-for="LifeCycle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PushStrength" class="control-label"></label>
                <input asp-for="PushStrength" class="form-control" />
                <span asp-validation-for="PushStrength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KeysCount" class="control-label"></label>
                <input asp-for="KeysCount" class="form-control" />
                <span asp-validation-for="KeysCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material" class="control-label"></label>
                <input asp-for="Material" class="form-control" />
                <span asp-validation-for="Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConnectionType" class="control-label"></label>
                <select asp-for="ConnectionType" asp-items="Html.GetEnumSelectList<ConnectionType>()" class="form-control"></select>
                <span asp-validation-for="ConnectionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Warranty" class="control-label"></label>
                <input asp-for="Warranty" class="form-control" />
                <span asp-validation-for="Warranty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufacturerId" class="control-label"></label>
                <select asp-for="ManufacturerId" class ="form-control" asp-items="ViewBag.ManufacturerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
