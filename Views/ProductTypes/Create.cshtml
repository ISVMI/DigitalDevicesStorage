@model DigitalDevices.Models.CreateProductTypeViewModel

@{
    ViewData["Title"] = "Добавление";
}

<h1>Добавить</h1>

<h4>Новый тип продукта</h4>
<hr />
<div>
    <a class="btn btn-primary" asp-action="Index">Назад к списку</a>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CharacteristicsTypesNames" class="control-label"></label>
                <select asp-for="CharacteristicsTypesNames"
                asp-items="ViewBag.CharacteristicsTypes" 
                class="form-control" multiple>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<style>
    select[multiple] {
        min-width: 500px;
        min-height: 300px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
